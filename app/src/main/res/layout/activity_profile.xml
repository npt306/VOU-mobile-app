<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2">

    <ImageView
        android:id="@+id/profileBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_back_button"
        android:layout_marginEnd="11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="My voucher" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#FFFFFF"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/profileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Huynh Phu Qui"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/profilePersonalInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="personal information"
            android:drawableLeft="@drawable/icon_email"
            android:background="@drawable/login_button_background"/>

        <Button
            android:id="@+id/profileFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="friend"
            android:drawableLeft="@drawable/icon_email"
            android:background="@drawable/login_button_background"/>

        <Button
            android:id="@+id/profileVoucherHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="voucher history"
            android:drawableLeft="@drawable/icon_email"
            android:background="@drawable/login_button_background"/>

        <Button
            android:id="@+id/profileMyVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="my voucher"
            android:drawableLeft="@drawable/icon_email"
            android:background="@drawable/login_button_background"/>

        <Button
            android:id="@+id/profileEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="event"
            android:drawableLeft="@drawable/icon_email"
            android:background="@drawable/login_button_background"/>

    </LinearLayout>
</RelativeLayout>