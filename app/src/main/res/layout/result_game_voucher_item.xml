<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/item_result_game_voucher_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#FFEB3B"
        android:contentDescription="Item Image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_result_game_voucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Name voucher"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center" />
        <TextView
            android:id="@+id/item_result_game_voucher_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/item_result_game_voucher_pieces"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:id="@+id/item_result_game_voucher_available_pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/item_result_game_voucher_total_pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
